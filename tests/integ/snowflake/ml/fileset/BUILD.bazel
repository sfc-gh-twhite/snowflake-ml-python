py_test(
    name = "fileset_integ_test",
    timeout = "long",
    srcs = ["fileset_integ_test.py"],
    shard_count = 5,
    deps = [
        ":fileset_integ_utils",
        "//snowflake/ml/_internal/exceptions:fileset_errors",
