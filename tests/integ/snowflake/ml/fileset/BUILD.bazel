load("//bazel:py_rules.bzl", "py_library", "py_test")

package(default_visibility = ["//visibility:public"])

py_library(
    name = "fileset_integ_utils",
    srcs = ["fileset_integ_utils.py"],
)

py_test(
    name = "sfcfs_integ_test",
