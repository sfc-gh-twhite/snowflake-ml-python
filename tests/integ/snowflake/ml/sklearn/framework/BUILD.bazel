load("//bazel:py_rules.bzl", "py_library", "py_test")

package(default_visibility = ["//visibility:public"])

SHARD_COUNT = 3
TIMEOUT = "long"  # 900s

py_test(
    name = "test_base",
    srcs = ["test_base.py"],
    deps = [
        ":utils",
        "//snowflake/ml/sklearn/preprocessing:min_max_scaler",
        "//snowflake/ml/sklearn/preprocessing:standard_scaler",
        "//snowflake/ml/utils:connection_params",
    ],
)

py_test(
    name = "test_pipeline",
    srcs = ["test_pipeline.py"],
    shard_count = SHARD_COUNT,
    timeout = TIMEOUT,
    deps = [
        ":utils",
        "//snowflake/ml/sklearn/preprocessing:min_max_scaler",
        "//snowflake/ml/sklearn/preprocessing:standard_scaler",
        "//snowflake/ml/utils:connection_params",
    ],
)

py_library(
    name = "utils",
    srcs = ["utils.py"],
)
